extends ../layout

block content
  -data = data || {}

  if errors
    ul.my-errors
      for error in errors
        li= error.msg

  a(href="/locale_accounts") Back

  form(action="./new" method="POST" class="form-registration")
    label(for="name") Name:
    input(
      type="text"
      id="name"
      name="name"
      class="form-control"
      value=data.name
    )

    label(for="month_collections") Monthly Collections:
    input(
      type="text"
      name="monthly_collections[0][month]"
      class="form-control monthly-collection"
    )
    input(
      type="text"
      name="monthly_collections[1][month]"
      class="form-control monthly-collection"
    )

    input(
      type="submit"
      value="Submit"
      class="btn btn-lg btn-primary btn-block"
    )