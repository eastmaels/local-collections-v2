extends ../layout

block content
  -data = data || {}

  if errors
    ul.my-errors
      for error in errors
        li= error.msg

  a(href="/locale_accounts") Back

  form(action="./new" method="POST" class="form-registration")
    label(for="month") Month:
    input(
      type="text"
      name="month"
      class="form-control"
    )

    input(
      type="submit"
      value="Submit"
      class="btn btn-lg btn-primary btn-block"
    )