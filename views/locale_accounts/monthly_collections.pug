extends ../layout

block content
  -data = data || {}
  -localeId = localeId || ''

  a(href='/locale_accounts/' + localeId + '/edit') Back

  div(class="row")
    div(class="col-12")
      a(
        class="btn btn-primary"
        href='collections/new'
        style="float: right"
      ) Add Collection
  p
    label(for="month") Monthly Collection:
    input(
      type="text"
      id="month"
      name="month"
      class="form-control"
      value=data.month
      readonly=true
    )

  if data.collections.length
    div(class="row")
      div(class="col-12")
        table.table.table-striped.table-hover
          thead.thead-light
            tr.d-flex
              th(class="col-3") Given By
              th(class="col-3") Amount
          tbody
            each collection in data.collections
              tr.d-flex
                td(class="col-3")= collection.givenBy
                td(class="col-3")= collection.amount

  else
    p No collections for this month yet :(


